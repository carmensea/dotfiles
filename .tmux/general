# pane0:top |  pane1:bottom-left | pane2:bottom-mid | pane3: bottom-right
# select first pane -- only one if empty
rename-window Dev
select-pane -t 0
# split horizontally by 85%
split-window -v -p 20
# select bottom pane and split vertically by 25%
select-pane -t 1
split-window -h -p 50
# select larger bottom pane and split in half - yielding 3 1/3 chunks
select-pane -t 2
split-window -h -p 50

# run commands
send -t 0 'referrals' ENTER
send -t 1 'kufak' ENTER
send -t 1 'invoker start invoker.ini --port=9500' ENTER
send -t 2 'referrals' ENTER
send -t 2 'invoker start invoker.ini --port=9600' ENTER
send -t 3 'referrals' ENTER

select-pane -t 0
